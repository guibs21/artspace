{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    panier
{% endblock %}

{% block body %}
    <br><br><br><br><br>
    <br><br><br><br><br>
    <br>
    <div class="container-fluid">
        <div class="table-responsive">
            <h1>Commande : {{ app.user.username }}</h1>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th></th>
                </tr>
    {% for produit in produits %}
                <tr>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.prix }}</td>
                    <td><a href="{{ url('suppPanier', { 'id' : produit.id } ) }}">Supprimer</a></td>
    {% endfor %}
                </tr>
            </table>
        </div>
            <button class="btn btn-success">Valider votre commande</button>
    </div>
{% endblock %}
    
