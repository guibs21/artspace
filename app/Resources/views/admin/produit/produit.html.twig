{#{ form(form) }#}
{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    produit
{% endblock %}

{% block bodyId %} id="produit" {% endblock %}
{% block body %}
    <br><br><br><br><br><br>
    <div class="container">
        <p><a class="btn btn-success" href="{{ url('ajout_produit') }}">Ajouter produit</a></p>
    </div>
    <br><br><br><br>
    <br><br>
    <div class="container-fluid">
        <p class="alert alert-success" role="alert">
            Info :
            {% for notice in app.session.flashBag.get('notice') %}
                {{ notice }}
            {% endfor %}
        </p>
    </div>
    <div class="container-fluid">
    <div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Option 1</th>
            <th>Option 2</th>
            <th>Option 3</th>
