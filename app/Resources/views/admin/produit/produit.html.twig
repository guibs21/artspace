                        <p class="text-center">*</p>
                    {% else %}
                        {{ produit.option10 }}
                    {% endif %}
                </td>
                <td><a href="{{ url('supp_produit', { 'id' : produit.id } ) }}">Supprimer</a></td>
                <td><a href="{{ url('maj_produit', { 'id' : produit.id } ) }}">Modifier</a></td>
            </tr>
        {% endfor %}
    </table>
  </div>
