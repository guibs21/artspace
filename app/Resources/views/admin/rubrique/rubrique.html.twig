{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    rubrique
{% endblock %}

{% block bodyId %} id="rubrique" {% endblock %}
{% block body %}
    <br><br><br><br><br><br>
    <div class="container">
        <a class="btn btn-success" href="{{ url('ajout_rubrique') }}">Ajouter rubrique</a>
            {% for rubrique in rubriques %}
                <h2>{{ rubrique.name }}</h2>
                <p>
                    <a class="btn btn-default" href="{{ url('supp_rubrique', { 'id' : rubrique.id } ) }}">Supprimer</a>
                    <a class="btn btn-default"href="{{ url('maj_rubrique', { 'id' : rubrique.id } ) }}">Modifier</a>
                </p>
            {% endfor %}
    </div>
{% endblock %}

