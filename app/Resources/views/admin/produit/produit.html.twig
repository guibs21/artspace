                        {{ produit.option6 }}
                    {% endif %}
                </td>
                <td>
                    {% if produit.option7 is null %}
                        <p class="text-center">*</p>
                    {% else %}
                        {{ produit.option7 }}
                    {% endif %}
                </td>
                <td>
                    {% if produit.option8 is null %}
                        <p class="text-center">*</p>
                    {% else %}
                        {{ produit.option8 }}
                    {% endif %}
                </td>
                <td>
