{% extends 'base.html.twig' %}

{% block body %}

    <br><br><br><br><br>
    <br><br><br><br><br>
    <div class="container-fluid">
        <div class="row">
                {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert"> {{ flashMessage}}</div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert" > {{ flashMessage}}</div>
    {% endfor %}
            <div class="col-sm-4 col-sm-offset-8">
<a class="btn btn-primary"  href="{{ path('offers') }}" >Poursuivre vos achats</a>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="table-responsive">
            <h1>Commande : {{ app.user.username }}</h1>
            <h3>Compte E-mail : {{app.user.email}} </h3>
            <table class="table table-striped table-bordered">
              <tr>{% set total=0 %}
                    <th>Nom</th>
                    <th>Prix</th>
                    <th></th>
                    <th>total</th>
            {% for product in product %}
                </tr>
            <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td><a href="{{ path('removeToCart',{'ordre_panier':loop.index0}) }}"
                 class="linkDelete" > Supprimer </a></td>
                    <td>total de la commande Total {{ total }} $</td>
                    <td>{% set total=total + product.price %}</td>
            {% endfor %}

            </tr>
            </table>
        </div>
<a class="btn btn-success" href="{{ path('validateCommand') }}">Valider votre commande</a>
    </div>
{% endblock  %}
