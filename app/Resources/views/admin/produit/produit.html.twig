            <th>Option 5</th>
            <th>Option 6</th>
            <th>Option 7</th>
            <th>Option 8</th>
            <th>Option 9</th>
            <th>Option 10</th>
            <th></th>
            <th></th>
        </tr>
        {% for produit in produits %}
            <tr>
                <td>
                    {{ produit.name }}
                </td>
                <td>
                    {{ produit.price }}
                </td>
                <td>
                    {% if produit.option1 is null %}
                        <p class="text-center">*</p>
                    {% else %}
                        {{ produit.option1 }}
                    {% endif %}
                </td>
                <td>
                    {% if produit.option2 is null %}
